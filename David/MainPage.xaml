<Page
    x:Class="David.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:David"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF3577C5" BorderBrush="#FF932B1B">
        <TextBlock x:Name="tbMain" HorizontalAlignment="Center" Margin="10,10,13,0" TextWrapping="Wrap" Text="Welcome to The Achill Island Info App!" VerticalAlignment="Top" Height="150" Width="337" FontFamily="Britannic Bold" FontSize="40.0"/>
        <Image x:Name="image" HorizontalAlignment="Center" Height="244" Margin="10,165,13,231" VerticalAlignment="Center" Width="337" Source="Assets/mainpic.jpg"/>
        <Button x:Name="btnDirections" Content="Directions" HorizontalAlignment="Center" Margin="121,533,119,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnInformation" Content="Start" HorizontalAlignment="Left" Margin="121,468,0,0" VerticalAlignment="Top" Width="120" Click="btnInformation_Click"/>
    </Grid>
</Page>
